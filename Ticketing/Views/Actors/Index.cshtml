@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of Actors";
}

<head>
    <script src="https://kit.fontawesome.com/db02a3cd59.js" crossorigin="anonymous"></script>
   
</head>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureUrl" atl="@item.FullName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary text-black"><i class="fa fa-pencil-square-o fa-fw" aria-hidden="true"></i>Edit </a>
                            <a class="btn btn-outline-info text-black"><i class="fa fa-info-circle"></i>Details </a>
                            <a class="btn btn-danger"><i class=" fa  fa-trash-o fa-fw" aria-hidden="true"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>